.hero-title
    position: absolute;
    font-size: 35px;
    line-height: 40px;
    font-family:serif;
    color: #ecf0f1;
    height: 160px;
    .word-switch
        overflow hidden
        height:80px
        display flex
        justify-content center
        .words-left
            span
                display inline
                float right
                margin 0
        .words-right
            ul.words-wrapper
                display inline
                float left
                padding-left: 20px
                margin-top:0;
                text-align:left;
                list-style:none;
                animation 22s linear 0 normal none infinite change
                .word
                    line-height:100px;
                    margin:0;
                    margin-top -17px
                    color s-a
            
@keyframes change {
  0%, 12%, 100%   {transform:translateY(0);}
  17%,29%  {transform:translateY(-25%);}
  34%,46%  {transform:translateY(-50%);}
  51%,63%  {transform:translateY(-75%);}
  68%,80%  {transform:translateY(-50%);}
  85%,97%  {transform:translateY(-25%);}
}